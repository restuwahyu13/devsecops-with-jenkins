{
	"compilerOptions": {
		"outDir": "./dist",
		"target": "ES2018",
		"module": "CommonJS",
		"moduleResolution": "node",
		"strict": true,
		"skipLibCheck": true,
		"allowSyntheticDefaultImports": true,
		"esModuleInterop": true,
		"sourceMap": true,
		"removeComments": true,
		"downlevelIteration": true,
		"typeRoots": ["node_modules/@types/"]
	},
	"exclude": ["node_modules", "dist", "tests", "coverage", ".nyc_output"]
}
